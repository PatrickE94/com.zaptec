{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": ".homeybuild/",
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.json",
    "./.eslintrc.js",
    "package.json"
  ],
  "exclude": ["./build", "./app.json", "./package-lock.json"]
}
